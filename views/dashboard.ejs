<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    .card-img-top {
      height: 200px;
      object-fit: cover;
    }
    body {
      padding-top: 70px;
    }
    .section-title {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 1rem;
    }
  </style>
</head>
<body class="bg-light">

  <!-- ‚úÖ Navbar Start -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/admin/dashboard">Admin Panel</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">üè† Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/upload">+ Upload</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <!-- ‚úÖ Navbar End -->

  <div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="fw-bold">Admin Dashboard</h2>
      <a href="/admin/upload" class="btn btn-primary">+ Upload Project</a>
    </div>

    <!-- üì¶ Side-by-Side Before / After Section -->
    <div class="row">
      
      <!-- üîµ BEFORE -->
      <div class="col-md-6 mb-5">
        <div class="text-primary section-title">üïí Project 1 Before Section</div>
        <div class="row">
          <% projects.filter(p => p.section === 'before').forEach(project => { %>
            <div class="col-md-12 mb-4">
              <div class="card shadow-sm h-100">
                <img src="<%= project.mediaPath %>" class="card-img-top" alt="Image" />
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title"><%= project.title %></h5>
                  <p class="card-text"><%= project.description %></p>
                  <!-- <p class="badge bg-secondary w-fit"><%= project.mediaType %> | <%= project.section %></p> -->
                </div>
                <div class="card-footer d-flex justify-content-between">
                  <a href="/admin/edit/<%= project._id %>" class="btn btn-sm btn-warning">Edit</a>
                  <a href="/admin/delete/<%= project._id %>" class="btn btn-sm btn-danger" onclick="return confirm('Delete this project?')">Delete</a>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </div>

      <!-- üî¥ AFTER -->
      <div class="col-md-6 mb-5">
        <div class="text-danger section-title">üïë Project 2 After Section</div>
        <div class="row">
          <% projects.filter(p => p.section === 'after').forEach(project => { %>
            <div class="col-md-12 mb-4">
              <div class="card shadow-sm h-100">
                <img src="<%= project.mediaPath %>" class="card-img-top" alt="Image" />
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title"><%= project.title %></h5>
                  <p class="card-text"><%= project.description %></p>
                  <!-- <p class="badge bg-secondary w-fit"><%= project.mediaType %> | <%= project.section %></p> -->
                </div>
                <div class="card-footer d-flex justify-content-between">
                  <a href="/admin/edit/<%= project._id %>" class="btn btn-sm btn-warning">Edit</a>
                  <a href="/admin/delete/<%= project._id %>" class="btn btn-sm btn-danger" onclick="return confirm('Delete this project?')">Delete</a>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </div>

    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
