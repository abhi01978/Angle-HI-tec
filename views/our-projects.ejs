        <div class="grid sm:grid-cols-2 gap-6">
          <% beforeProjects.forEach(project => { %>
            <div class="bg-white border rounded-xl shadow hover:shadow-xl transition group">
              <% if (project.mediaType === 'image') { %>
                <img src="<%= project.mediaPath %>" class="w-full h-48 object-cover rounded-t-xl cursor-pointer group-hover:scale-105 transition duration-300" onclick="openModal('<%= project.mediaPath %>')" />
              <% } else { %>
                <video controls class="w-full h-48 object-cover rounded-t-xl">
                  <source src="<%= project.mediaPath %>" type="video/mp4" />
                </video>
              <% } %>
              <div class="p-4">
                <h4 class="text-lg font-bold text-gray-800"><%= project.title %></h4>
                <p class="text-gray-600 text-sm"><%= project.description %></p>
              </div>
            </div>
          <% }) %>
        </div>
